<mvc:View xmlns="sap.suite.ui.commons" xmlns:m="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:viz="sap.viz.ui5.controls" xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core" controllerName="zpr.analyse.ZPR-Analyse.controller.Chart">
	<m:HBox width="100%" justifyContent="End" alignItems="Start" height="5%">
	    <m:items>
	        <core:Fragment xmlns:core="sap.ui.core" fragmentName="zpr.analyse.ZPR-Analyse.view.fragments.Header" type="XML"/>
	    </m:items>
	</m:HBox>
	<layout:Splitter width="100%" height="100%">
		<layout:contentAreas>
			<ChartContainer id="chartContainer" showFullScreen="true" showPersonalization="false" autoAdjustHeight="false" personalizationPress="attachPersonalizationPress" contentChange="attachContentChange" title="Chart">
				<dimensionSelectors>
					<m:Select id="dimensionSelector1"/>
					<m:Select id="dimensionSelector2"/>
					<m:Select id="dimensionSelector3"/>
				</dimensionSelectors>
				<customIcons>
					<core:Icon id="customIcon1"/>
					<core:Icon id="customIcon2"/>
					<core:Icon id="customIcon3"/>
				</customIcons>
				<content>
					<ChartContainerContent icon="sap-icon://vertical-bar-chart" title="Column Chart">
						<content>
							<viz:VizFrame id="vizFrame" height="700px" width="100%" uiConfig="{applicationSet:'fiori'}"/>
						</content>
					</ChartContainerContent>
				</content>
			</ChartContainer>
		</layout:contentAreas>
	</layout:Splitter>
</mvc:View>